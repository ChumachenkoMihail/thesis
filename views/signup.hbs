        <div>
            <h1 class="form-title" id="greg">Авторизация</h1>
        </div>
        <div class="reg-group">
            <input type="text" class="reg-input" placeholder="Логин" name="login">
        </div>
        <div class="reg-group">
            <input type="text" class="reg-input" placeholder="Пароль" name="password">
        </div>
        <div class="reg-group">
            <input type="submit" class="reg-button" value="Войти">
        </div>
        <br>
        <div>
            <a href="/registration">Зарегистрироваться</a>
        </div>
    </form>
</div>
